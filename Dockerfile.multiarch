FROM debian:trixie-slim

ARG TARGETPLATFORM
ARG TARGETARCH
ARG TARGETVARIANT

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3t64 \
    && rm -rf /var/lib/apt/lists/*

# Copy the appropriate binary based on the target platform
# Docker buildx provides TARGETPLATFORM in format like "linux/amd64", "linux/arm64", etc.
COPY glidefs-linux-* /tmp/

RUN case "${TARGETPLATFORM}" in \
        "linux/amd64") \
            mv /tmp/glidefs-linux-amd64-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/arm64") \
            mv /tmp/glidefs-linux-arm64-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/arm/v7") \
            mv /tmp/glidefs-linux-armv7-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/386") \
            mv /tmp/glidefs-linux-i686-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/ppc64le") \
            mv /tmp/glidefs-linux-ppc64le-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/s390x") \
            mv /tmp/glidefs-linux-s390x-pgo /usr/local/bin/glidefs \
            ;; \
        "linux/riscv64") \
            mv /tmp/glidefs-linux-riscv64-pgo /usr/local/bin/glidefs \
            ;; \
        *) \
            echo "Unsupported platform: ${TARGETPLATFORM}" && exit 1 \
            ;; \
    esac && \
    rm -f /tmp/glidefs-linux-*-pgo && \
    chmod +x /usr/local/bin/glidefs

RUN useradd -m -u 1001 glidefs

USER glidefs

# Default ports that might be used - actual configuration comes from TOML file
EXPOSE 2049 5564 10809

ENTRYPOINT ["glidefs"]
